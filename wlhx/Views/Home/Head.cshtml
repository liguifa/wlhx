            $('#login').toggle();
            $('#toggle-login').click(function ()
            {
                $('#login').toggle();
            });
            $("#loginbtn").click(function () {
                var user = $("#Username").val();
                var pass = $("#Passwd").val();
                if (user == "" || pass == "") {
                    $("#messager").text("用户名或密码不可为空");
                    return;
                }
              
                $.ajax({
                    type: "post",
                    url: "/Student/Login",
                    data: {
                        Username: $("#Username").val(),
                        Passwd: $("#Passwd").val(),
                    },
                    success: function (data) {
                        var data = eval("(" + data + ")");
                        if (data.back == "ok") {
                            window.location.href = "/Student/Index";
                        }
                        else {
                            $("#messager").toggle();
                            $("#messager").text(data.back);
                        }
                    }


                });
            });
    });
