<div class="cd-user-modal" style="z-index:1001">
    <!-- this is the entire modal form, including the background -->
    <div class="cd-user-modal-container">
        <!-- this is the container wrapper -->


        <div id="cd-login">
            <!-- log in form -->
            <form class="cd-form" method="post">
                <p class="fieldset">
                    
                    <label class="image-replace cd-username" for="signin-email">E-mail</label>
                    <input class="full-width has-padding has-border" id="Username" type="number" required placeholder="学号">
                    <span class="cd-error-message">用户名错误！</span>
